<?xml version='1.0' encoding='utf-8'?>
<odoo>


<!-- Publiation form view -->

  <record id="publication_form_view" model="ir.ui.view">
    <field name="name">Publication Form view</field>
    <field name="model">publication</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
            <group>
                <field name="name"/>
            </group>
            <group>
                <group>
                    <field name="author"/>
                </group>
                <group>
                    <field name="discription"/>
                </group>
            </group>
        </sheet>
      </form>
    </field>
  </record>

 <!-- education Tree view -->
  <record id="publication_tree_view" model="ir.ui.view">
    <field name="name">Publication tree view</field>
    <field name="model">publication</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
             <field name="author"/>
              <field name="discription"/>
        </tree>
    </field>
  </record>

</odoo>